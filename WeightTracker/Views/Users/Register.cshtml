@model WeightTracker.Models.UsersRegisterInputModel

<h2 class="center-align">Register:</h2>
<div class="row">
    <form asp-controller="Users" asp-action="Register" method="post" enctype="application/x-www-form-urlencoded" class="col s6 offset-s3">
        <div class="row">
            <div class="input-field col s6">
                <input asp-for="Name" placeholder="Name" class="validate">
                <label asp-for="Name"></label>
            </div>
            <div class="input-field col s6">
                <input asp-for="SecretWord" placeholder="Secret word" class="validate">
                <label asp-for="SecretWord"></label>
            </div>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Register<i class="material-icons right">send</i></button>
    </form>
</div>